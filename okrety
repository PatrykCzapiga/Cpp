void czyszczenie_planszy(  )
{
    int x=0;
    int y=0;
        while(x!=10)
        {
            while(y!=10)
            {
            p1[x][y]=32;
            y++;
            }
        y=0;
        x++;
        }

}
bool sprawdz(int m)
{
int tx=x;
int ty=y;
 for(int j=statek[m];j!=0;j--) // stawianie
            {
                if(k==1)
                {
                    if(p1[tx][ty]==32 && (ty-statek[m])!=10)
                    {
                        ty++;
                    }
                    else
                    {
                        return 0;
                    }
                }
                if(k==2)
                {
                    if(p1[tx][ty]==32 && (tx-statek[m])!=10)
                    {
                        tx++;
                    }
                    else
                    {
                       return 0;
                    }
                }
            }
            return 1;
}
void ai_rozstawia()
{
    for(int i=9; i>-1; i--)
    {
            k=(rand()%2)+1; // 1 pionowo | 2 poziomo
            if(k==1)
            {
                x=(rand()%10);
                y=(rand()%10);
            }
            if(k==2)
            {
                x=(rand()%10);
                y=(rand()%10);
            }
        if(sprawdz(i)==1)
        {
            for(int j=statek[i];j!=0;j--) // stawianie
            {
                if(k==1)
                {
                    p1[x][y]=35;
                    y++;
                    c++;
                }
                else
                {
                p1[x][y]=35;
                x++;
                c++;
                }
            }
        }
        else
        {
        i++;
        }
}
}
int main()
{

    srand(time(NULL));
    statek[0]=4;
    statek[1]=3;
    statek[2]=3;
    statek[3]=2;
    statek[4]=2;
    statek[5]=2;
    statek[6]=1;
    statek[7]=1;
    statek[8]=1;
    statek[9]=1;

    //czyszczenie planszy
    czyszczenie_planszy();
    //stawianie statków PC
    ai_rozstawia();
    //wyswietl
    wyswietlpc();
    graczstawia();
return 0;

}
